<div class="fields document">
  <%= link_to(organisation_document_path(current_organisation, doc), target: :_blank) do %>
    <%= image_tag(doc.document.thumb.file ? doc.document.thumb.url : get_document_icon_url_for_extension(doc.document.file.extension), class: 'document-thumb') %>
    <div class="document-info">
      <p class="filename" title="<%= doc.document.file.filename %>"><%= doc.document_filename %></p>
      <p class="created_at"><%= l(doc.created_at, format: :long) if doc.created_at %></p>
      <p class="created_by" title="<%= doc.user.instance_name %>"><%= doc.user.instance_name %></p>
    </div>
  <% end %>
  <%= form.link_to_remove '', class: 'icon icon-remove action-button', title: t('remove_nested_object', class: Document.model_name.human.lcfirst) if defined?(form) %>
</div>
