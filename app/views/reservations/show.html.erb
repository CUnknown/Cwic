<% content_for :page_title do %>
<%= show_title(@reservation) %>
<% end %>

<dl>
  <dt><%= Reservation.human_attribute_name(:begins_at) %></dt>
  <dd><%=l(@reservation.begins_at, format: :long) %></dd>
  <dt><%= Reservation.human_attribute_name(:ends_at) %></dt>
  <dd><%=l(@reservation.ends_at, format: :long) %></dd>
  <dt><%= Reservation.human_attribute_name(:entity) %></dt>
  <dd><%= @reservation.entity.instance_name %></dd>
  <dt><%= Reservation.human_attribute_name(:organisation_client) %></dt>
  <dd><%= @reservation.organisation_client.instance_name %></dd>
</dl>

<%= render partial: 'stickies/js_init', locals: { stickies: @reservation.stickies, resource_name: @reservation.class.name, resource_id: @reservation.id } %>

<%= button_link_back_to_index([@organisation, Reservation]) %>
<%= button_link_to_edit([@organisation, @reservation]) %>
<%= button_link_to_destroy([@organisation, @reservation]) %>