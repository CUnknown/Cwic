<%= form_for([@organisation, @reservation]) do |f| %>
  <%= render 'shared/error_messages', target: @reservation %>

  <div class="field">
    <%= f.label :begins_at %>
    <%= f.text_field :begins_at_date, id: 'begins_at_date', value: I18n.l(@reservation.begins_at_date, format: :default), class: 'date-field'  %>
    <%= f.text_field :begins_at_time, id: 'begins_at_time', value: I18n.l(@reservation.begins_at_time, format: :time), class: 'time-field'  %>
  </div>
  <div class="field">
    <%= f.label :ends_at %>
    <%= f.text_field :ends_at_date, id: 'ends_at_date', value: I18n.l(@reservation.ends_at_date, format: :default), class: 'date-field'  %>
    <%= f.text_field :ends_at_time, id: 'ends_at_time', value: I18n.l(@reservation.ends_at_time, format: :time), class: 'time-field' %>
  </div>
  <div class="field">
    <%= f.label :entity %>
    <%= f.collection_select :entity_id, @organisation.entities.all.sort, :id, :name, prompt: t('prompt_choose') %>
  </div>
  <div class="field">
    <%= f.label :organisation_client %>
    <%= f.collection_select :organisation_client_id, @organisation.organisation_clients.all.sort, :id, :name, prompt: t('prompt_choose') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>