h3
  => "#{result.class.model_name.human}:"
  = name_link_to_show([@organisation, result])

.result-icon
  i.icon-mimetype

.info.clearfix
  .column
    | column 1

  .column
    | column 2

  .column
    h4 = EntityImage.model_name.human(count: 2)
    dl
      - if result.entity_images.present?
        .entity-images-container.clearfix
          = render result.entity_images
      - else
        = t('empty_objects', classes: EntityImage.model_name.human(count: 2).lcfirst)
