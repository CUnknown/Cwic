.result-icon
  i.icon-user
h3
  = "#{result.class.model_name.human}: "
  = name_link_to_show([@organisation, result])
.info.clearfix
  .column
    table
      tbody
        tr
          th
            = OrganisationClient.human_attribute_name(:name)
          td
            = result.full_name
        tr
          th
            = OrganisationClient.human_attribute_name(:email)
          td
            a href="mailto:#{result.email}"
              = result.email
        tr
          th
            = OrganisationClient.human_attribute_name(:phone)
          td
            a href="tel:#{result.phone}"
              = result.phone
        tr
          th
            = OrganisationClient.human_attribute_name(:mobile_phone)
          td
            a href="tel:#{result.mobile_phone}"
              = result.mobile_phone
  .column
    h4
      = t('.upcomming_reservations')
    - if result.upcomming_reservations(3).empty?
      p
        = t('.empty', default: :empty_objects, classes: Reservation.model_name.human(count: 2).lcfirst)
    - else
      dl
        - result.upcomming_reservations(3).includes(:entity).each do |res|
          dt title=I18n.l(res.begins_at, format: :long)
            = res.begins_at <= Time.now ? t('now') : t('.in_about') + ' ' + distance_of_time_in_words_to_now(res.begins_at)
          dd
            = name_link_to_show([@organisation, res.entity], name: res.entity.full_instance_name)
            |  :
            = name_link_to_show([@organisation, res])
            = res.description
  .column
    h4
      = t('.past_reservations')
    - if result.past_reservations(3).empty?
      p
        = t('.empty', default: :empty_objects, classes: Reservation.model_name.human(count: 2).lcfirst)
    - else
      dl
        - result.past_reservations(3).includes(:entity).each do |res|
          dt title=I18n.l(res.ends_at, format: :long)
            = time_ago_in_words(res.ends_at) + ' ' + t('.ago')
          dd
            = name_link_to_show([@organisation, res.entity], name: res.entity.full_instance_name)
            |  :
            = name_link_to_show([@organisation, res])
            = res.description
