<!DOCTYPE html>
<html class="no-js">
  <head>
    <title><%= sanitize(content_for?(:page_title) ? yield(:page_title) : t('default_title'), tags: []) %> | Cwic</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= jquery_include_tag :google %>
    <%= jquery_ui_include_tag :google %>
    <%= content_for?(:javascript_libs) ? yield(:javascript_libs) : nil %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="controller-<%= controller_name %> action-<%= action_name %>" data-controller="<%= controller_name %>" data-action="<%= action_name %>" data-current-user-id="<%= current_user.try(:id) %>" data-current-user-name="<%= current_user.try(:instance_name) %>" data-current-organisation-id="<%= current_organisation.try(:id) %>" data-current-locale="<%= I18n.locale %>">
    <% if !user_signed_in? %>
    <div id="logo-container">
      <div id="logo-container-inner">
        <img src="<%= asset_path('logo.png') %>" class="logo" />
      </div>
    </div>
    <% end %>
    <div id="header">
      <% if user_signed_in? %>
      <%= render "layouts/menu" %>
      <% end %>
      <div id="progress-bar-container"></div>
    </div>
    <div id="content-area">
      <div class="inner">
        <%= content_for?(:mini_search) ? yield(:mini_search) : '' %>
        <% if content_for?(:right_controls) %>
          <div class="right-controls">
            <%= yield(:right_controls) %>
          </div>
        <% end %>
        <h1 id="page-title"><%= content_for?(:page_title) ? yield(:page_title) : t('default_title') %></h1>
        <div id="content">
          <div class="inner clearfix">
            <%= render partial: 'layouts/flash_messages' %>
            <%= content_for?(:content) ? yield(:content) : yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: 'shared/modal' %>
    <%= render partial: 'feedbacks/modal' %>
  </body>
</html>
