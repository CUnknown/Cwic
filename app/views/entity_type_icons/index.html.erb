<% content_for :page_title do %><%= index_title(EntityTypeIcon) %><% end %>

<% content_for :mini_search do %>
  <%= render 'layouts/mini_search', current_search_type: EntityTypeIcon.model_name %>
<% end %>

<% if @entity_type_icons.empty? && params[:mini_search].present? %>
<p><%= t('empty_for_search', classes: EntityTypeIcon.model_name.human(count: 2).lcfirst, search: sanitize(params[:mini_search], :tags=>[])).html_safe %>
<%= link_to(t('remove_search'), entity_type_icons_path()) %></p>
<% elsif @entity_type_icons.empty? %>
<p><%= t('.empty', default: :empty_objects, classes: EntityTypeIcon.model_name.human(count: 2).lcfirst) %></p>
<% else %>
<%= paginate @entity_type_icons %>
<table>
  <thead>
    <tr>
      <th></th>
        <%= sortable_table_head(EntityTypeIcon, :name) %>
      <% if @admin %>
        <%= sortable_table_head(EntityTypeIcon, :organisation) %>
      <% end %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entity_type_icons.each do |entity_type_icon| %>
    <tr>
      <td><%= image_tag(entity_type_icon.image.icon.url) %></td>
      <td><%= name_link_to_show(entity_type_icon) %></td>
      <% if @admin %>
       <td><%= entity_type_icon.organisation.present? ? entity_type_icon.organisation.name : t('all_organisations') %></td>
      <% end %>
      <td class="icons">
        <%= icon_link_to_edit(@organisation.present? ? [@organisation, entity_type_icon] : entity_type_icon) %>
        <%= icon_link_to_destroy(@organisation.present? ? [@organisation, entity_type_icon] : entity_type_icon) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @entity_type_icons %>
<% end %>

<%= button_link_to_new(@organisation.present? ? [@organisation, EntityTypeIcon] : EntityTypeIcon) %>