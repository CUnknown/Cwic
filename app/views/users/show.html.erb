<% content_for :page_title do %><%= show_title(@user) %><% end %>

<% content_for :local_menu_navigation do %>
  <%= button_link_back_to_index(User) %>
  <%= button_link_to_edit(@user) %>
  <%= button_link_to_destroy(@user) %>
<% end %>

<dl>
  <dt><%= User.human_attribute_name(:first_name) %></dt>
  <dd><%= @user.first_name %></dd>
  <dt><%= User.human_attribute_name(:infix) %></dt>
  <dd><%= @user.infix %></dd>
  <dt><%= User.human_attribute_name(:last_name) %></dt>
  <dd><%= @user.last_name %></dd>
  <dt><%= User.human_attribute_name(:email) %></dt>
  <dd><%= @user.email %></dd>
  <dt><%= User.human_attribute_name(:sign_in_count) %></dt>
  <dd><%= @user.sign_in_count %></dd>
  <dt><%= User.human_attribute_name(:created_at) %></dt>
  <dd><%=l(@user.created_at, format: :long) %></dd>
  <dt><%= User.human_attribute_name(:last_sign_in_at) %></dt>
  <dd><%=l(@user.last_sign_in_at, format: :long) if @user.last_sign_in_at.present? %></dd>
</dl>
