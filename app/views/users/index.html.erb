<% content_for :page_title do %><%= index_title(User) %><% end %>

<% content_for :mini_search do %>
  <%= render 'layouts/mini_search', current_search_type: User.model_name %>
<% end %>

<% if @users.empty? && params[:mini_search].present? %>
<p><%= t('empty_for_search', classes: User.model_name.human(count: 2).lcfirst, search: sanitize(params[:mini_search], :tags=>[])).html_safe %>
<%= link_to(t('remove_search'), users_path()) %></p>
<% elsif @users.empty? %>
<p><%= t('.empty', default: :empty_objects, classes: User.model_name.human(count: 2).lcfirst) %></p>
<% else %>
<%= paginate @users %>
<table>
  <thead>
    <tr>
      <th>#</th>
        <%= sortable_table_head(User, :first_name) %>
        <%= table_head(User, :infix) %>
        <%= sortable_table_head(User, :last_name) %>
        <%= sortable_table_head(User, :email) %>
        <%= sortable_table_head(User, :sign_in_count) %>
        <%= sortable_table_head(User, :created_at) %>
        <%= sortable_table_head(User, :last_sign_in_at) %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= name_link_to_show(user, {name: user.id.to_s}) %></td>
      <td><%= user.first_name %></td>
      <td><%= user.infix %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.sign_in_count %></td>
      <td><%=l(user.created_at, format: :long) %></td>
      <td><%=l(user.last_sign_in_at, format: :long) if user.last_sign_in_at.present? %></td>
      <td class="icons">
        <%= icon_link_to_edit(user) %>
        <%= icon_link_to_destroy(user) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
<% end %>