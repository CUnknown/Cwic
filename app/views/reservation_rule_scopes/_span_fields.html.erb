<div class="fields span-wrapper">
  <div class="span-ui">
    <div class="span-fields">
      <div class="from">
        <%= f.label(:from) %>
        <span class="field-container" data-from-to="from"></span>
      </div>
      <div class="to">
        <%= f.label(:to) %>
        <span class="field-container" data-from-to="to"></span>
      </div>
    </div>
    <div class="actions">
      <%= f.link_to_remove '', class: 'icon icon-remove', title: t('remove_nested_object', class: ReservationRuleScope.model_name.human.lcfirst) %>
    </div>
  </div>
  <div class="span-data">
    <%= f.text_field(:year_from, class: 'year-from') %>
    <%= f.text_field(:month_from, class: 'month-from') %>
    <%= f.text_field(:week_from, class: 'week-from') %>
    <%= f.text_field(:holiday_from, class: 'holiday-from') %>
    <%= f.text_field(:dom_from, class: 'dom-from') %>
    <%= f.text_field(:nrom_from, class: 'nrom-from') %>
    <%= f.text_field(:dow_from, class: 'dow-from') %>
    <%= f.text_field(:hour_from, class: 'hour-from') %>
    <%= f.text_field(:minute_from, class: 'minute-from') %>
    <%= f.text_field(:year_to, class: 'year-to') %>
    <%= f.text_field(:month_to, class: 'month-to') %>
    <%= f.text_field(:week_to, class: 'week-to') %>
    <%= f.text_field(:holiday_to, class: 'holiday-to') %>
    <%= f.text_field(:dom_to, class: 'dom-to') %>
    <%= f.text_field(:nrom_to, class: 'nrom-to') %>
    <%= f.text_field(:dow_to, class: 'dow-to') %>
    <%= f.text_field(:hour_to, class: 'hour-to') %>
    <%= f.text_field(:minute_to, class: 'minute-to') %>
  </div>
</div>
