<div id="calendar" class="clearfix" data-target-year="<%= @year %>" data-target-week="<%= @week %>" data-target-month="<%= @month %>" data-target-day="<%= @day %>" data-target-entity="<%= @sel_entity %>"></div>

<script type="text/template" id="scheduleContainerTemplate">
  <div class="schedule">
    <div class="fast-select clearfix">
      <a id="selectNone" class="button"><%=t('.select_none') %></a>
      <a id="selectAll" class="button"><%=t('.select_all') %></a>
    </div>
    <div class="entity-container clearfix">

      <div id="entity-showcase-tabs">
        <ul class="nav">
        </ul>

        <div class="tab-wrap clearfix">
        </div>
      </div>

      <p class="no_entities_found"><%= t('.no_entities_found', link: link_to_new([@organisation, Entity])).html_safe %></p>
    </div>
    <div class="clearfix">
      <div class="control-container navigate">
        <a id="previous" class="button"><i class="icon-chevron-left"></i></a>
        <a id="current" class="button"><%=t('.today') %></a>
        <a id="next" class="button"><i class="icon-chevron-right"></i></a>
        <span style="margin: 0px 10px;"></span>
        <a id="dayMode" class="button scope"><i class="icon-calendar" style="margin-right: 5px;"></i><%=t('.day') %></a>
        <a id="weekMode" class="button scope"><i class="icon-calendar" style="margin-right: 5px;"></i><%=t('.week') %></a>
        <a id="monthMode" class="button scope"><i class="icon-calendar" style="margin-right: 5px;"></i><%=t('.month') %></a>
        <a id="yearMode" class="button scope"><i class="icon-calendar" style="margin-right: 5px;"></i><%=t('.year') %></a>
        <a id="customMode" class="button scope"><i class="icon-calendar" style="margin-right: 5px;"></i><%=t('.custom') %></a>
      </div>
      <div class="control-container domain">
        <div class="inner">
          <input type="text" id="scheduleBeginDate" style="position: relative; z-index: 100;" autocomplete="off" />
          <span class="tm"><%=t('.tm') %></span>
          <input type="text" id="scheduleEndDate" style="position: relative; z-index: 100;" autocomplete="off" />
          <a class="button" id="scheduleDateUpdate"/><%=t('.set') %></a>
        </div>
      </div>
    </div>
    <div class="top-axis clearfix">
      <div class="ajax-notification-container">
        <div class="ajax-notification">
          <div class="ajax-wait"></div>
          <div class="message"></div>
        </div>
      </div>
      <div class="axis-parts clearfix"></div>
      <div class="reservation-controls">
        <div class="inner clearfix">
          <a href="#" id="description" class="toolbar-button"><i class="icon-info-sign"></i> <%= t('.description') %></a>
          <a href="#" id="client" class="toolbar-button"><i class="icon-user"></i> <%= t('.organisation_client') %></a>
          <a href="#" id="edit" class="toolbar-button"><i class="icon-edit"></i> <%= t('.edit') %></a>
          <a href="#" id="remove" class="toolbar-button"><i class="icon-remove-sign"></i> <%= t('.delete') %></a>
          <a href="#" class="icon-remove toolbar-close-button"></a>
        </div>
      </div>
      <div class="description-bubble"></div>
    </div>
    <div class="left-axis"></div>
    <div class="schedule-body">
      <div class="grid"></div>
    </div>
  </div>
</script>

