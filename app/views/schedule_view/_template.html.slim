#calendar.clearfix data={ target_year: @year, target_week: @week, target_month: @month, target_day: @day, target_entity: @sel_entity }

script#scheduleContainerTemplate type="text/template"
  .schedule
    .fast-select.clearfix
      a#selectNone.button
        =t('.select_none')
      a#selectAll.button
        =t('.select_all')

    .entity-container.clearfix
      div#entity-showcase-tabs
        ul.nav
        .tab-wrap.clearfix
      p.no_entities_found
        = t('.no_entities_found', link: link_to_new([@organisation, Entity])).html_safe

    .left-axis
    .schedule-scroll-container
      / TODO: Move sticky header to local menu area
      /.top-axis.clearfix
      /  .axis-parts.clearfix
      /  .description-bubble

      .schedule-body
        .grid

